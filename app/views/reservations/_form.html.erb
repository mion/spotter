<%= form_for @reservation do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Reservar vaga</legend>
  </fieldset>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label 'Horário de chegada' %>
      <%= f.datetime_select :starts_at, discard_day: true, discard_month: true, discard_year: true, default: Time.now %>
    </div>
    <div class="span6">
      <%= f.label 'Horário de saída' %>
      <%= f.datetime_select :ends_at, discard_day: true, discard_month: true, discard_year: true, default: Time.now %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label 'Número'%>
      <%= f.text_field :credit_card, :class => "span12" %>
      <%= f.label 'Expira em' %>
      <%= f.date_select :expires_at, discard_day: true, start_year: 2013 %>
    </div>
    <div class="span6">
      <%= f.label 'Nome no cartão' %>
      <%= f.text_field :holder_name, :class => "span12" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Confirmar', class: 'btn btn-primary btn-large' %>
    <%= link_to "Cancelar", reservations_path, class: 'btn btn-large' %></p>
  </div>
<% end %>
